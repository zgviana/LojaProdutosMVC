@using Loja.Entidades
@model Product


@{
    ViewData["Title"] = "Detalhes do Produto";
    var paginaAtual = ViewBag.paginaAtual as string;

}   


<div class="d-flex justify-content-between">
    <h2>@Model.Title</h2>        

    <a asp-action="AddFavoritos" asp-route-idProduct="@Model.Id" asp-route-indFavoritos="@Model.Favorito" asp-route-paginaRedirect="Details" class="btn btn-light">
        <!--coração preenchido classe bi-heart-fill / coracao vazio bi bi-heart-->
        @if (Model.Favorito)
        {
            <i style="color:red" class="bi-heart-fill"></i>
        }
        else
        {
            <i class="bi bi-heart"></i>
        }

    </a>
</div>


<div class="row">
    
    <div class="col-md-6">
        <img src="@Model.Image" class="img-fluid" alt="@Model.Title" />       
    </div>
    <div class="col-md-6">
        <h4>Preço: @Model.Price.ToString("C")</h4>
        <p>@Model.Description</p>
        <p><strong>Categoria:</strong> @Model.Category</p>
        <p><strong>Avaliação:</strong> @Model.Rating.Rate (Baseado em @Model.Rating.Count avaliações)</p>

        <a asp-action="@paginaAtual" class="btn btn-secondary mt-3">Voltar</a>
    </div>
</div>